    <div class="container mt-3" style="width: 500px;">
  <h2>New Product</h2>
  <form action="/insertProduct" method="post">
    <div class="mb-3 mt-3">
      <label for="email">Name</label>
      
      <input type="text" class="form-control" placeholder="Enter Name" name="txtName" minlength="5" maxlength="100" required 
      title="Please enter a name with more than 5 characters">
        
    </div>
    
    <div class="mb-3">
      <label for="pwd">Price</label>
      <input type="text" class="form-control"  placeholder="Enter Price" name="txtPrice"  >
    </div>
     <div class="mb-3">
      <label for="pwd">Color</label>

      <select name="color" >
    <option value="Purple">Purple</option>
    <option value="Red">Red</option>
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label">Image</label>
      <input type="text" class="form-control"  placeholder="Enter image link" name="txtImage">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

